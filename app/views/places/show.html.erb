<h1><%= @place["name"]%></h1>


<ul>
    <% posts = Post.where({"place_id" => @place["id"]}) %>
    <% for post in posts %>
        <h2><%= post["title"]%></h2>
        <p> <%= post["description"]%></p>
        <p> <%= post["posted_on"]%></p>
   <% end %>
</ul>

<p>
    <a href="/places">Back to all places</a>
</p>

