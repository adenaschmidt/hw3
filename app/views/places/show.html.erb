<h1><%= @place["name"]%></h1>


<h2>
    <% posts = Post.where({"place_id" => @place["id"]}) %>
    <% for post in posts %>
        <h2><%= post["title"]%></h2>
        <p><%= post["description"]%></p>
        <p><%= post["date"]%></p>
   <% end %>
</h2>

<ul>
    <% posts = Post.where({"place_id" => @place["id"]}) %>
    <% for post in posts %>
    <li>
        <%= "#{post["title"]} #{post["date"]} #{post["description"]}" %>
    </li>
   <% end %>
</ul>


<a href="">Add post for <%= @place["name"] %>
</a>


<p>
    <a href="/places">Back to all places</a>
</p>